# 微信公众号配置示例
# 复制此文件为 .env 并填入真实的配置信息

# 微信公众号配置
WECHAT_APP_ID=
WECHAT_APP_SECRET=
WECHAT_TOKEN=your_wechat_token
WECHAT_ENCODING_AES_KEY=

# 数据库配置
DATABASE_URL=postgresql://username:password@localhost:5432/zhiweijz?schema=public

# JWT配置
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# 服务器配置
PORT=3000
NODE_ENV=development

# 日志配置
# 可选值: DEBUG, INFO, WARN, ERROR
# DEBUG: 显示所有日志（开发环境推荐）
# INFO: 显示 INFO 及以上级别（生产环境推荐）
# WARN: 只显示警告和错误
# ERROR: 只显示错误
LOG_LEVEL=INFO

# 外部访问域名配置（包含域名+端口）
# 用于nginx重定向、iOS快捷指令返回地址、token验证地址等
# 示例: https://your-domain.com:443 或 http://your-domain.com:8080
EXTERNAL_DOMAIN=https://your-domain.com

# 邮件配置（可选）
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password


# 开发环境配置
WECHAT_ENV=development
WECHAT_DEV_APP_ID=your_test_appid
WECHAT_DEV_APP_SECRET=your_test_secret
WECHAT_DEV_TOKEN=your_test_token

# 会员系统配置
ENABLE_MEMBERSHIP_SYSTEM=false
ENABLE_ACCOUNTING_POINTS_SYSTEM=false
MEMBERSHIP_MONTHLY_POINTS=1000
DEFAULT_MEMBER_TYPE=REGULAR

# 定时任务调度器配置
# 设置为 true 使用统一计划任务调度器（推荐）
# 设置为 false 使用传统独立任务调度器（默认）
USE_UNIFIED_SCHEDULER=false

# H5支付配置（Android客户端）
H5_PAYMENT_APP_ID=your_h5_payment_app_id
H5_PAYMENT_APP_SECRET=your_h5_payment_app_secret
H5_PAYMENT_NOTIFY_URL=https://your-domain.com/api/android-h5-payment/notify
H5_PAYMENT_API_BASE_URL=https://open.h5zhifu.com

# ================================
# 版本管理系统配置
# ================================
ENABLE_VERSION_MANAGEMENT=flase
VERSION_CHECK_API_ENABLED=flase
VERSION_CHECK_INTERVAL=86400
FORCE_UPDATE_GRACE_PERIOD=604800
UPDATE_NOTIFICATION_ENABLED=flase