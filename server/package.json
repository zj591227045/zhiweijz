{
  "name": "zhiweijz-server",
  "version": "1.0.0",
  "description": "只为记账后端服务",
  "main": "src/index.ts",
  "scripts": {
    "start": "node dist/index.js",
    "start:auto": "node scripts/auto-upgrade-on-start.js",
    "start:dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "dev": "nodemon --exec \"ts-node -r tsconfig-paths/register src/index.ts\"",
    "build": "npx tsc",
    "test": "jest",
    "budget-scheduler": "ts-node -r tsconfig-paths/register scripts/budget-scheduler.ts",
    "test-budget-auto-continuation": "ts-node -r tsconfig-paths/register scripts/test-budget-auto-continuation.ts",
    "test-budget-date-utils": "ts-node -r tsconfig-paths/register scripts/test-budget-date-utils.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prisma:generate": "npx prisma generate",
    "db:upgrade": "node scripts/complete-upgrade.js",
    "db:check": "node scripts/check-table-schema.js",
    "migrate:status": "node scripts/migration-manager.js status",
    "migrate:upgrade": "node scripts/migration-manager.js migrate",
    "migrate:version": "node scripts/migration-manager.js version",
    "migrate:check": "node scripts/migration-manager.js check",
    "migrate:fix-constraint": "node scripts/fix-schema-versions-constraint.js",
    "docker:start": "bash scripts/docker-start.sh",
    "health": "node scripts/health-check.js",
    "admin:init": "ts-node -r tsconfig-paths/register src/admin/scripts/init-admin.ts",
    "admin:aggregate": "ts-node -r tsconfig-paths/register src/admin/scripts/start-aggregation.ts --run-now",
    "create-wechat-menu": "ts-node -r tsconfig-paths/register scripts/create-wechat-menu.ts",
    "cleanup-wechat-verification": "node scripts/cleanup-wechat-verification.js",
    "db:enable-user-ai": "node ../scripts/database/enable-user-ai-services.js",
    "wechat:dev": "node scripts/start-wechat-dev.js",
    "wechat:test": "node scripts/test-wechat-integration.js",
    "wechat:cleanup": "node -e \"require('./dist/services/wechat-config.service').WechatConfigService.prototype.cleanupOldLogs(30)\""
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.842.0",
    "@aws-sdk/s3-request-presigner": "^3.842.0",
    "@langchain/core": "^0.3.56",
    "@langchain/openai": "^0.5.10",
    "@prisma/client": "5.20.0",
    "@radix-ui/react-alert-dialog": "^1.1.13",
    "@radix-ui/react-tabs": "^1.1.12",
    "@types/archiver": "^6.0.3",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/multer": "^1.4.12",
    "@types/uuid": "^10.0.0",
    "archiver": "^7.0.1",
    "axios": "^1.9.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "csv-parse": "^5.6.0",
    "csv-writer": "^1.6.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.3",
    "helmet": "^7.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.4",
    "prisma": "5.20.0",
    "react-swipeable": "^7.0.2",
    "typescript": "^5.1.6",
    "uuid": "^11.1.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.5",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.9",
    "@types/supertest": "^2.0.12",
    "@types/xml2js": "^0.4.14",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
