{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "../node_modules/@types"],
    "lib": ["es2016"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "../apps/ios/**/*",
    "../apps/android/**/*",
    "../packages/mobile/**/*",
    "../packages/web/**/*",
    "../packages/core/**/*",
    "src/__tests__/integration/family.integration.test.ts",
    "src/__tests__/integration/unbudgeted-transactions.test.ts",
    "src/__tests__/services/statistics-unbudgeted.test.ts",
    "src/tests/budget-multibudget-fix.test.ts"
  ]
}
