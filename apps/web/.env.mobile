# ==========================================
# 移动端构建专用环境变量配置
# ==========================================

# 应用版本信息
NEXT_PUBLIC_APP_VERSION=0.7.5
NEXT_PUBLIC_BUILD_NUMBER=75

# 构建模式配置（移动端）
BUILD_MODE=mobile
IS_MOBILE_BUILD=true
NEXT_PUBLIC_IS_MOBILE=true

# 环境配置
NODE_ENV=production

# ==========================================
# API配置（生产环境）
# ==========================================

# API基础URL配置（生产环境）
NEXT_PUBLIC_API_BASE_URL=https://app.zhiweijz.cn:1443

# 调试版本API配置（可选）
NEXT_PUBLIC_DEBUG_API_BASE_URL=https://jz-pre.jacksonz.cn:4443

# ==========================================
# 版本管理配置
# ==========================================

# 版本更新检查功能开关
NEXT_PUBLIC_ENABLE_VERSION_CHECK=true

# 版本检查间隔 (毫秒)
NEXT_PUBLIC_VERSION_CHECK_INTERVAL=86400000

# 自动检查开关
NEXT_PUBLIC_AUTO_VERSION_CHECK=true

# ==========================================
# RevenueCat支付配置（生产环境）
# ==========================================

# RevenueCat API密钥（生产环境公开密钥，用于客户端）
# 请替换为您的生产环境RevenueCat SDK API Key
NEXT_PUBLIC_REVENUECAT_API_KEY=appl_mZpkfekTpXxlxbtlJAMmdXJLoRc

# RevenueCat REST API密钥（生产环境私有密钥，用于服务端API调用）
# 请替换为您的生产环境RevenueCat Secret API Key
REVENUECAT_REST_API_KEY=sk_CUyUNhLHYmOfjlUVJFBJSMrzatExG

# ==========================================
# 控制台日志管理配置（移动端优化）
# ==========================================

# 移动端禁用控制台日志以优化性能
NEXT_PUBLIC_ENABLE_CONSOLE_LOGS=false

# 移动端仅保留错误级别日志
NEXT_PUBLIC_LOG_LEVEL=error

# 生产环境保留错误日志
NEXT_PUBLIC_PRESERVE_ERROR_LOGS=true

# 允许运行时控制日志（用于调试）
NEXT_PUBLIC_ALLOW_RUNTIME_LOG_CONTROL=false

# ==========================================
# 其他配置
# ==========================================

# 禁用Next.js遥测
NEXT_TELEMETRY_DISABLED=1

# ==========================================
# 移动端特定配置说明
# ==========================================
#
# 此文件专用于iOS/Android移动端应用打包
# 
# 重要提醒：
# 1. NEXT_PUBLIC_REVENUECAT_API_KEY 必须使用生产环境的SDK API Key
# 2. 确保API密钥与RevenueCat Dashboard中配置的产品ID匹配
