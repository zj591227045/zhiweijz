# 应用版本信息
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_BUILD_NUMBER=1
NEXT_PUBLIC_BUILD_TIME=2024-01-01T00:00:00Z

# API配置
NEXT_PUBLIC_API_BASE_URL=

# 构建模式
BUILD_MODE=web
IS_MOBILE_BUILD=false
NEXT_PUBLIC_IS_MOBILE=false

# RevenueCat配置
# 从RevenueCat Dashboard获取这些值

# RevenueCat API密钥（公开密钥，用于客户端）
# 从 RevenueCat Dashboard → API keys → SDK API keys 获取
# 点击"只为记账 (App Store)"旁边的 Show key
NEXT_PUBLIC_REVENUECAT_API_KEY=your_sdk_api_key_here

# RevenueCat Webhook密钥（私有密钥，用于验证webhook）
# 从 RevenueCat Dashboard → Integrations → Webhooks 获取
REVENUECAT_WEBHOOK_SECRET=your_webhook_secret_here

# RevenueCat REST API密钥（私有密钥，用于服务端API调用）
# 从 RevenueCat Dashboard → API keys → Secret API keys 获取
# 点击"zhiweijz"旁边的 Show key
REVENUECAT_REST_API_KEY=your_secret_api_key_here

# 数据库配置（如果使用）
DATABASE_URL=your_database_url_here

# 开发环境配置
NODE_ENV=development
