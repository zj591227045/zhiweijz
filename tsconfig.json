{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@server/*": ["server/src/*"],
      "@client/*": ["client/src/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["server/src/**/*", "client/src/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist"]
}
